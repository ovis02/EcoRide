<header>
  <div class="login-menu admin">
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin_dashboard') }}">
      <img
        src="{{ asset('assets/images/logo/iconebleu.png') }}"
        alt="Dashboard Admin"
      />
    </a>
    {% elseif is_granted('ROLE_EMPLOYE') %}
    <a href="{{ path('employe_dashboard') }}">
      <img
        src="{{ asset('assets/images/logo/iconebleu.png') }}"
        alt="Dashboard Employé"
      />
    </a>
    {% elseif is_granted('ROLE_USER') %}
    <a href="{{ path('user_dashboard') }}">
      <img
        src="{{ asset('assets/images/logo/iconebleu.png') }}"
        alt="Dashboard Utilisateur"
      />
    </a>
    {% else %}
    <div class="dropdown-wrapper">
      <button class="login-toggle" type="button">
        <img
          src="{{ asset('assets/images/logo/iconebleu.png') }}"
          alt="Connexion"
        />
      </button>
      <div class="login-dropdown">
        <a class="login-user" href="{{ path('app_login') }}"
          >Connexion Utilisateur</a
        >
        <a class="login-employe" href="{{ path('employe_login') }}"
          >Connexion Employé</a
        >
        <a class="login-admin" href="{{ path('admin_login') }}"
          >Connexion Admin</a
        >
      </div>
    </div>
    {% endif %}
  </div>

  <div class="header-container">
    <div class="logo">
      <img
        src="{{ asset('assets/images/logo/LOGO EcoRide.PNG') }}"
        alt="EcoRide"
      />
    </div>

    <div class="text-center flex-grow-1">
      {% if app.user %} {% if 'ROLE_ADMIN' in app.user.roles %}
      <h4 class="mb-0 fw-bold text-primary">Espace Administrateur</h4>
      {% elseif 'ROLE_EMPLOYE' in app.user.roles %}
      <h4 class="mb-0 fw-bold text-primary">Espace Employé</h4>
      {% elseif 'ROLE_CHAUFFEUR' in app.user.roles and 'ROLE_PASSAGER' in
      app.user.roles %}
      <h4 class="mb-0 fw-bold text-primary">Espace Chauffeur & Passager</h4>
      {% elseif 'ROLE_CHAUFFEUR' in app.user.roles %}
      <h4 class="mb-0 fw-bold text-primary">Espace Chauffeur</h4>
      {% elseif 'ROLE_PASSAGER' in app.user.roles %}
      <h4 class="mb-0 fw-bold text-primary">Espace Passager</h4>
      {% else %}
      <h4 class="mb-0 fw-bold text-primary">Espace Utilisateur</h4>
      {% endif %} {% else %}
      <h4 class="mb-0 fw-bold text-primary">Bienvenue sur EcoRide</h4>
      {% endif %}
    </div>

    <div>
      {% if app.user %} {% if 'ROLE_EMPLOYE' in app.user.roles %}
      <a href="{{ path('employe_logout') }}" class="btn btn-outline-danger"
        >Déconnexion</a
      >
      {% elseif 'ROLE_USER' in app.user.roles %}
      <a href="{{ path('app_logout') }}" class="btn btn-outline-danger"
        >Déconnexion</a
      >
      {% elseif 'ROLE_ADMIN' in app.user.roles %}
      <a href="{{ path('admin_logout') }}" class="btn btn-outline-danger"
        >Déconnexion</a
      >
      {% endif %} {% endif %}
    </div>
  </div>
</header>
